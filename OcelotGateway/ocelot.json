{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5003"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/gateway/students",
      "UpstreamHttpMethod": [ "Get" ],
      "AddHeadersToRequest": {
        "X-Ref-Id": "{Request.Headers.X-Ref-Id}"
      },
      "DownstreamPathTemplate": "/api/student",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "studentservice",
          "Port": 80
        }
      ]
    },
