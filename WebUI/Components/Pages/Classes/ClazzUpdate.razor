@page "/clazz/update/{id:int}"
@using WebUI.Components.Models
@inject NavigationManager NavigationManager
@inject ApiService ApiService

<h3>Class Management - UPDATE</h3>

<EditForm Model="editClazz" OnValidSubmit="UpdateAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Class Name</label>
        <input class="form-control" @bind="editClazz.Title" />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <input class="form-control" @bind="editClazz.Description" />
    </div>

    <div class="mb-3">
        <label>Capacity</label>
        <input type="number" class="form-control" @bind="editClazz.Capacity" />
    </div>


    <button type="submit" class="btn btn-primary">Update</button>
    <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
</EditForm>


@code {
    private ClazzModel editClazz = new ClazzModel();

    [Parameter] public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {

        editClazz = await ApiService.GetClazzesAsyncById(Id);

    }



    private async Task UpdateAsync()
    {
        bool success = await ApiService.UpdateClazzAsync(editClazz, editClazz.Id);
        if (success)
        {
            NavigationManager.NavigateTo("/clazz", true);
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/clazz");
    }

}
